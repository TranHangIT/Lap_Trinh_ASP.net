
@{
    ViewBag.Title = "Chi tiết sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- page-title -->
<div class="page-title-area item-bg-3">
    <div class="container">
        <div class="page-title-content">
            <h2>Chi tiết sản phẩm</h2>
            <ul>
                <li>
                    <a href="@Url.Action("Index","Home")">
                        Home
                        <i class="fa fa-chevron-right"></i>
                    </a>
                </li>
                <li>Chi tiết sản phẩm</li>
            </ul>
        </div>
    </div>
</div>

<!-- product-details -->
<section class="product-details-area ptb-100">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-12">
                <div class="product-details-image">
                    <img src="~/wwwroot/img/shop/1.png" alt="image">
                </div>
                <h5 style="margin-top: 10px;">Mô tả sản phẩm</h5>
                <p>Mô tả sản phẩm ở đây</p>
            </div>
            <div class="col-lg-6 col-md-12">
                <div class="product-details-desc">
                    <h3>Red Side Book</h3>
                    <div class="price">
                        <span class="new-price">$14.00</span>
                    </div>
                    <div class="col-lg-12 col-md-12">
                        <div class="tab products-details-tab">
                            <div class="row">
                                <div class="col-lg-12 col-md-12">
                                    <div class="tab_content">
                                        <div class="tabs_item">
                                            <div class="products-details-tab-content">
                                                <ul class="additional-information">
                                                    <li><span>Số lượng:</span> 12</li>
                                                    <li><span>Loại sản phẩm:</span> Wine</li>
                                                    <li><span>Thương hiệu:</span> Ladium</li>
                                                    <li><span>Xuất xứ:</span> Italia</li>
                                                    <li><span>Dung tích:</span> 256 ml</li>
                                                    <li><span>Nồng độ:</span> 45 độ</li>
                                                    <li><span>Tuổi rượu:</span> 20 năm</li>
                                                </ul>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="product-add-to-cart">
                        <div class="input-counter">
                            <span class="minus-btn">
                                <i class="fa fa-minus"></i>
                            </span>
                            <input type="text" min="1" value="1" spellcheck="false" data-ms-editor="true">
                            <span class="plus-btn">
                                <i class="fa fa-plus"></i>
                            </span>
                        </div>
                        <button type="submit" class="default-btn">
                            <i class="fa fa-cart-plus"></i>
                            Thêm vào giỏ hàng
                        </button>
                    </div>
                    <div class="buy-checkbox-btn">

                        <div class="item">
                            <a href="@Url.Action("DatHang","Home")" class="default-btn">
                                Đặt hàng
                            </a>
                        </div>
                    </div>
                    <div class="custom-payment-options">
                        <span>Thanh toán online:</span>
                        <div class="payment-methods">
                            <img src="~/wwwroot/img/product-details/payment/1.svg" alt="image">
                            <img src="~/wwwroot/img/product-details/payment/2.svg" alt="image">
                            <img src="~/wwwroot/img/product-details/payment/3.svg" alt="image">
                            <img src="~/wwwroot/img/product-details/payment/4.svg" alt="image">
                            <img src="~/wwwroot/img/product-details/payment/5.svg" alt="image">
                            <img src="~/wwwroot/img/product-details/payment/6.svg" alt="image">
                            <img src="~/wwwroot/img/product-details/payment/7.svg" alt="image">
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>

